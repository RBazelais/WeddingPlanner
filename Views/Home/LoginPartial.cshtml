@{
    ViewData["Title"] = "Login";
}

@model WeddingPlanner.Models.LoginViewModel;
@using WeddingPlanner.Models;


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>I'm planning a Wedding!</h3>
        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>Login</legend>
                <form asp-controller="Home" asp-action="LoginUser" method="POST">
                    <div class="form-group">
                        <label asp-for="Email">Email: </label>
                        <input type="text" name="Email" placeholder="Email" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password: </label>
                        <input type="password" name="Password" placeholder="Password" class="form-control"> 
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button class="btn btn-default" type="submit">Login</button>
                </form>
            </fieldset>
            <a asp-controller="Home" asp-action="Index">Don't have an account? Register Here</a>
        </div>
    </div>
</div>