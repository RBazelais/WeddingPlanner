@{
    ViewData["Title"] = "Registration";
}
@model WeddingPlanner.Models.RegisterViewModel;
@using WeddingPlanner.Models;


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Shotgun Wedding!</h3>
        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>Registration</legend>
                @{
                    if(!(ViewBag.errors is null))
                    {
                        foreach (var error in ViewBag.errors)
                        {
                            if(@error.Errors.Count > 0 )
                            {
                                <p>@error.Errors[0].ErrorMessage</p>
                            }
                        }
                    }
                    <span>@ViewBag.err</span>
                }
                <form asp-controller="Home" asp-action="register" method="POST">
                    <div class="form-group">    
                        <label asp-for="FirstName">First Name: </label>
                        <input type="text" name="FirstName" placeholder="First Name" class="form-control">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">    
                        <label asp-for="LastName">Last Name: </label>
                        <input type="text" name="LastName" placeholder="Last Name" class="form-control">
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email: </label>
                        <input type="text" name="Email" placeholder="Email" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password: </label>
                        <input type="password" name="Password" placeholder="Password" class="form-control"> 
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <!-- <p><small>*Password should be atleast 8 characters</small></p> -->
                        <label asp-for="ConfirmPassword">Confirm Password: </label>
                        <input type="password" name="ConfirmPassword" placeholder="Confirm password" class="form-control">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </fieldset>
            
            <br>
            <a asp-controller="Home" asp-action="Login">Already, Registered?</a>

        </div>
    </div>
</div>
